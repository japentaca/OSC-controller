<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OSC Sensor Controller"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <!-- Configuration Accordion Header -->
    <LinearLayout
        android:id="@+id/configurationHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/colorPrimaryVariant"
        android:padding="12dp"
        android:layout_marginBottom="0dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="⚙️ Configuración"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimary" />

        <TextView
            android:id="@+id/configExpandIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="▼"
            android:textSize="14sp"
            android:textColor="?attr/colorOnPrimary" />
    </LinearLayout>

    <!-- Configuration Content (Expandable) -->
    <LinearLayout
        android:id="@+id/configurationContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="?attr/colorSurface"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP Address:"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/ipEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="192.168.0.5"
            android:text="192.168.0.5"
            android:inputType="textUri"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Port:"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/portEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="9000"
            android:text="9000"
            android:inputType="number"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sampling Rate (ms):"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/samplingRateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="200"
            android:inputType="number"
            android:text="200" />
    </LinearLayout>

    <Switch
        android:id="@+id/sendSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar mensajes"
        android:checked="false"
        android:layout_marginTop="16dp" />

    <CheckBox
        android:id="@+id/normalizeCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Normalize Values (0-1)"
        android:checked="true"
        android:layout_marginTop="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Accelerometer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <CheckBox
                    android:id="@+id/accelerometerCheckBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Accelerometer"
                    android:checked="true" />

                <EditText
                    android:id="@+id/accelerometerThresholdEditText"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="0.05"
                    android:text="0.05"
                    android:inputType="numberDecimal"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Gyroscope -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <CheckBox
                    android:id="@+id/gyroscopeCheckBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gyroscope"
                    android:checked="true" />

                <EditText
                    android:id="@+id/gyroscopeThresholdEditText"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="0.05"
                    android:text="0.05"
                    android:inputType="numberDecimal"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Magnetometer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <CheckBox
                    android:id="@+id/magnetometerCheckBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Magnetometer"
                    android:checked="false" />

                <EditText
                    android:id="@+id/magnetometerThresholdEditText"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="0.05"
                    android:text="0.05"
                    android:inputType="numberDecimal"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Light Sensor -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <CheckBox
                    android:id="@+id/lightSensorCheckBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Light Sensor"
                    android:checked="false" />

                <EditText
                    android:id="@+id/lightSensorThresholdEditText"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="0.05"
                    android:text="0.05"
                    android:inputType="numberDecimal"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Proximity Sensor -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <CheckBox
                    android:id="@+id/proximityCheckBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Proximity Sensor"
                    android:checked="false" />

                <EditText
                    android:id="@+id/proximityThresholdEditText"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="0.05"
                    android:text="0.05"
                    android:inputType="numberDecimal"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Pressure Sensor -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <CheckBox
                    android:id="@+id/pressureCheckBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pressure Sensor"
                    android:checked="false" />

                <EditText
                    android:id="@+id/pressureThresholdEditText"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="0.05"
                    android:text="0.05"
                    android:inputType="numberDecimal"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Temperature Sensor -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <CheckBox
                    android:id="@+id/temperatureCheckBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Temperature Sensor"
                    android:checked="false" />

                <EditText
                    android:id="@+id/temperatureThresholdEditText"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="0.05"
                    android:text="0.05"
                    android:inputType="numberDecimal"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Humidity Sensor -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <CheckBox
                    android:id="@+id/humidityCheckBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Humidity Sensor"
                    android:checked="false" />

                <EditText
                    android:id="@+id/humidityThresholdEditText"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="0.05"
                    android:text="0.05"
                    android:inputType="numberDecimal"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
